@model IEnumerable<ATS.Domain.Models.Veiculo>
@{
    ViewData["Title"] = "Veiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header with-border">
                <i class="glyphicon glyphicon-list"></i>
                <h3 class="box-title">Certificado</h3>
            </div>
            <div class="box-body">
                <table class="table table-striped table-bordered table-hover" style="width:100%" id="tblcertificado">
                    <thead>
                        <tr>

                            <th>
                                <b>
                                     @Html.DisplayNameFor(model => model.Id)
                                </b>
                            </th>
 
                            <th>
                                <b>
                                     @Html.DisplayNameFor(model => model.Modelo)
                                </b>
                            </th>
 
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.Modelo)
                                </td>
                              
                                <td>
                                    <a class="btn btn-default" href="@Url.Action("Edit", "veiculo", new { id = item.Id })">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>

                                    <a class="btn btn-default" href="@Url.Action("Details", "veiculo", new { id = item.Id })">
                                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>